<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eco.org.greenapp.FragmentUserReviews">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/biographyUser"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@color/colorBackgound"
        app:srcCompat="@drawable/messages" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/idSwipeReview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/idLvReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></ListView>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>
